<Page x:Class="EasyTimeTable.Views.Student.Tuition.StudentTuitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:local="clr-namespace:EasyTimeTable.Views.Student.Tuition"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      x:Name="mainPage"
      DataContext="{StaticResource TuitionVM}"
      Height="960" Width="1440"
      Title="StudentTuitionPage">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/Background.jpg"/>
    </Page.Background>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDB}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="mainPage"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid Margin="20 10 40 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <materialDesign:Card VerticalAlignment="Top" Grid.Column="0" Margin="40 20 20 20" MinHeight="800" MaxHeight="800" materialDesign:ElevationAssist.Elevation="Dp12">
            <TabControl SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding TabChangedCM}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <TabItem Header="Môn đăng kí">
            <StackPanel>
                <TextBlock TextAlignment="Center" 
                           FontSize="28" FontWeight="Bold" Margin="25" Foreground="#774fce">
                    Thông tin học phần
                </TextBlock>
                <Border Margin="10 0 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="10 10 10 10">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="0 0 0 1">
                                    <TextBlock  FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Text="Danh sách môn đã đăng kí"></TextBlock>
                                </Border>
                                <ListView MaxHeight="500" FontSize="20" 
                          ScrollViewer.CanContentScroll="False"
                          x:Name="listview"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          HorizontalContentAlignment="Stretch"
                          Margin="10 5 10 5" ItemsSource="{Binding CourseList}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Expander Margin="4"
                                        Width="800"
                                        Header="{Binding}"
                                        HorizontalAlignment="Right"
                                        Background="Transparent" 
                                             x:Name="expander"
                                        IsExpanded="False">
                                                    <Expander.HeaderTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock FontSize="20" Foreground="Black">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Mã môn học: {0}  -  Tên môn học: {1}">
                                                                            <Binding Path="MaHocPhan"/>
                                                                            <Binding Path="TenMon"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </Expander.HeaderTemplate>
                                                    <Grid>

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                            <RowDefinition Height="40"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent" Orientation="Vertical">
                                                            <TextBlock
                                                        Margin="50,0,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        FontWeight="Bold"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding SoTinChi, StringFormat=Số tín chỉ: {0}}"></TextBlock>
                                                            <TextBlock
                                                        Margin="50,5,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding TenGV, StringFormat=Giảng viên: {0}}"></TextBlock>
                                                            <TextBlock
                                                        Margin="50,5,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding SiSo, StringFormat=Sỉ số: {0}}"></TextBlock>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="3" Grid.ColumnSpan="3">
                                                            <TextBlock FontSize="16" FontWeight="Bold">Lịch học</TextBlock>
                                                            <TextBlock Margin="0,5,0,0" FontSize="16" LineHeight="25" Text="{Binding Thu, StringFormat=Thứ: {0}}"></TextBlock>
                                                            <TextBlock Margin="0,5,0,0" FontSize="16" LineHeight="25" Text="{Binding TietHoc, StringFormat=Tiết học: {0}}"></TextBlock>
                                                        </StackPanel>
                                                        <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" FontWeight="Bold" FontSize="18"
                                                        Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1"   Margin="0,0,40,5" Width="150" Height="35" HorizontalAlignment="Right"
                                                        Click="Button_Click">Hủy đăng ký</Button>
                                                    </Grid>
                                                </Expander>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Loaded">
                                            <i:InvokeCommandAction Command="{Binding LoadListDB}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ListView>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="1 0 1 1" CornerRadius="0 0 10 10" HorizontalAlignment="Right" Margin="0 0 17 20">
                            <TextBlock FontSize="20" Margin="20 0" Text="{Binding SoTinChi, StringFormat=Tổng số tín chỉ đã đăng kí: {0}}" FontWeight="Bold" HorizontalAlignment="Right"></TextBlock>
                        </Border>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Môn đang chờ">
                    <StackPanel>
                        <TextBlock TextAlignment="Center" 
                           FontSize="28" FontWeight="Bold" Margin="25" Foreground="#774fce">
                    Thông tin học phần
                        </TextBlock>
                        <Border Margin="10 0 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="10 10 10 10">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="0 0 0 1">
                                    <TextBlock  FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Text="Danh sách môn đang chờ thanh toán"></TextBlock>
                                </Border>
                                <ListView MaxHeight="500" FontSize="20" 
                          ScrollViewer.CanContentScroll="False"
                          x:Name="listview1"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          HorizontalContentAlignment="Stretch"
                          Margin="10 5 10 5" ItemsSource="{Binding CourseList}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown_1" />
                                        </Style>
                                    </ListView.ItemContainerStyle>

                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Expander Margin="4"
                                        Width="800"
                                        Header="{Binding}"
                                        HorizontalAlignment="Right"
                                        Background="Transparent" 
                                             x:Name="expander"
                                        IsExpanded="False">
                                                    <Expander.HeaderTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock FontSize="20" Foreground="Black">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Mã môn học: {0}  -  Tên môn học: {1}">
                                                                            <Binding Path="MaHocPhan"/>
                                                                            <Binding Path="TenMon"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </Expander.HeaderTemplate>
                                                    <Grid>

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                            <RowDefinition Height="40"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent" Orientation="Vertical">
                                                            <TextBlock
                                                        Margin="50,0,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        FontWeight="Bold"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding SoTinChi, StringFormat=Số tín chỉ: {0}}"></TextBlock>
                                                            <TextBlock
                                                        Margin="50,5,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding TenGV, StringFormat=Giảng viên: {0}}"></TextBlock>
                                                            <TextBlock
                                                        Margin="50,5,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding SiSo, StringFormat=Sỉ số: {0}}"></TextBlock>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="3" Grid.ColumnSpan="3">
                                                            <TextBlock FontSize="16" FontWeight="Bold">Lịch học</TextBlock>
                                                            <TextBlock Margin="0,5,0,0" FontSize="16" LineHeight="25" Text="{Binding Thu, StringFormat=Thứ: {0}}"></TextBlock>
                                                            <TextBlock Margin="0,5,0,0" FontSize="16" LineHeight="25" Text="{Binding TietHoc, StringFormat=Tiết học: {0}}"></TextBlock>
                                                        </StackPanel>
                                                        <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" FontWeight="Bold" FontSize="18"
                                                        Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1"   Margin="0,0,40,5" Width="150" Height="35" HorizontalAlignment="Right" IsEnabled="False"
                                                        Click="Button_Click">Đang chờ...</Button>
                                                    </Grid>
                                                </Expander>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="1 0 1 1" CornerRadius="0 0 10 10" HorizontalAlignment="Right" Margin="0 0 17 20">
                            <TextBlock FontSize="20" Margin="20 0" Text="{Binding SoTinChi}" FontWeight="Bold" HorizontalAlignment="Right"></TextBlock>
                        </Border>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Môn đã thanh toán">
                    <StackPanel>
                        <TextBlock TextAlignment="Center" 
                           FontSize="28" FontWeight="Bold" Margin="25" Foreground="#774fce">
                    Thông tin học phần
                        </TextBlock>
                        <Border Margin="10 0 10 0" BorderBrush="Gray" BorderThickness="1" CornerRadius="10 10 10 10">
                            <StackPanel>
                                <Border BorderBrush="Gray" BorderThickness="0 0 0 1">
                                    <TextBlock  FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Text="Danh sách môn đã hoàn tất thanh toán"></TextBlock>
                                </Border>
                                <ListView MaxHeight="500" FontSize="20" 
                          ScrollViewer.CanContentScroll="False"
                          x:Name="listview2"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          HorizontalContentAlignment="Stretch"
                          Margin="10 5 10 5" ItemsSource="{Binding CourseList}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown_1" />
                                        </Style>
                                    </ListView.ItemContainerStyle>

                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Expander Margin="4"
                                        Width="800"
                                        Header="{Binding}"
                                        HorizontalAlignment="Right"
                                        Background="Transparent" 
                                             x:Name="expander"
                                        IsExpanded="False">
                                                    <Expander.HeaderTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock FontSize="20" Foreground="Black">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Mã môn học: {0}  -  Tên môn học: {1}">
                                                                            <Binding Path="MaHocPhan"/>
                                                                            <Binding Path="TenMon"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </Expander.HeaderTemplate>
                                                    <Grid>

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"></RowDefinition>
                                                            <RowDefinition Height="40"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                            <ColumnDefinition Width="1*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent" Orientation="Vertical">
                                                            <TextBlock
                                                        Margin="50,0,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        FontWeight="Bold"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding SoTinChi, StringFormat=Số tín chỉ: {0}}"></TextBlock>
                                                            <TextBlock
                                                        Margin="50,5,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding TenGV, StringFormat=Giảng viên: {0}}"></TextBlock>
                                                            <TextBlock
                                                        Margin="50,5,0,0"
                                                        FontSize="16"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding SiSo, StringFormat=Sỉ số: {0}}"></TextBlock>
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="3" Grid.ColumnSpan="3">
                                                            <TextBlock FontSize="16" FontWeight="Bold">Lịch học</TextBlock>
                                                            <TextBlock Margin="0,5,0,0" FontSize="16" LineHeight="25" Text="{Binding Thu, StringFormat=Thứ: {0}}"></TextBlock>
                                                            <TextBlock Margin="0,5,0,0" FontSize="16" LineHeight="25" Text="{Binding TietHoc, StringFormat=Tiết học: {0}}"></TextBlock>
                                                        </StackPanel>
                                                        <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" FontWeight="Bold" FontSize="18"
                                                        Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1"   Margin="0,0,40,5" Width="170" Height="35" HorizontalAlignment="Right" IsEnabled="False"
                                                        Click="Button_Click">Đã thanh toán</Button>
                                                    </Grid>
                                                </Expander>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="1 0 1 1" CornerRadius="0 0 10 10" HorizontalAlignment="Right" Margin="0 0 17 20">
                            <TextBlock FontSize="20" Margin="20 0" Text="{Binding SoTinChi}" FontWeight="Bold" HorizontalAlignment="Right"></TextBlock>
                        </Border>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </materialDesign:Card>
        
        <StackPanel  Grid.Column="1" Height="900">
            <TextBlock TextAlignment="Center" FontSize="28" 
                       FontWeight="Bold" Text="Tổng tiền"/>
            <StackPanel Visibility="{Binding TienTronGoi}" >
                <ListView ScrollViewer.CanContentScroll="False"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        HorizontalContentAlignment="Stretch"
                        Margin="0 5 0 5" ItemsSource="{Binding Course}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="450">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock FontSize="16" Grid.Column="0">
                                    <Run Text="{Binding TenMon}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding MaHocPhan}"/>
                                </TextBlock>
                                <TextBlock FontSize="16" Text="{Binding SoTinChi, StringFormat={}{0} (tc)}" HorizontalAlignment="Right" Grid.Column="1"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid>
                    <TextBlock FontSize="20" Margin="0 10 0 0">Tiền trọn gói:</TextBlock>
                    <TextBlock FontSize="20" Margin="0 10 0 0" HorizontalAlignment="Right" Text="{Binding GiaTronGoi}"></TextBlock>
                </Grid>
            </StackPanel>

            <StackPanel Visibility="{Binding TienTinChi}"  Margin="0 10">
                <ListView ScrollViewer.CanContentScroll="False"       
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        Margin="0 5 0 5" ItemsSource="{Binding Course}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0 0 0 0">
                                <TextBlock FontSize="20" Text="{Binding MaHocPhan}"></TextBlock>
                                <TextBlock FontSize="20" HorizontalAlignment="Right" Text="{Binding SoTinChi}"></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <TextBlock FontSize="20">Tiền theo tín chỉ:</TextBlock>
                <TextBlock FontSize="20" HorizontalAlignment="Right">150.000 VND x 24 = 17.280.000 VND</TextBlock>
            </StackPanel>
            
            <StackPanel Visibility="{Binding TienHocLai}"  Margin="0 10">
                <ListView ScrollViewer.CanContentScroll="False"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        Margin="10 5 10 5" ItemsSource="{Binding CourseHocLai}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0 3 0 0">
                                <TextBlock FontSize="15" Text="{Binding MaHocPhan}"></TextBlock>
                                <TextBlock FontSize="15" HorizontalAlignment="Right" Text="{Binding SoTinChi}">7.000.000 VND</TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock FontSize="20">Tiền tín chỉ học lại:</TextBlock>
                <TextBlock FontSize="20" HorizontalAlignment="Right" TextWrapping="Wrap">150.000 VND x 24 x 1.2 = 17.280.000 VND</TextBlock>
            </StackPanel>
            
            <StackPanel Visibility="{Binding HocKiHe}" Margin="0 20 0 0">
                <Grid>
                    <TextBlock FontSize="20">Học kì hè:</TextBlock>
                    <TextBlock FontSize="20" HorizontalAlignment="Right">x 1.5</TextBlock>
                </Grid>
            </StackPanel>
        </StackPanel>
        
        <Grid Grid.Column="1" Margin="0 0 0 100">
            <TextBlock Margin="0 0 0 150" VerticalAlignment="Bottom" FontSize="20">Tổng số tín chỉ:</TextBlock>
            <TextBlock Margin="0 0 0 150" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="20" Text="{Binding SoTinChiTuition, StringFormat={}{0} (tc)}"></TextBlock>
            <TextBlock Margin="0 0 0 120" VerticalAlignment="Bottom" FontSize="20">Tổng số tiền cần thanh toán: </TextBlock>
            <TextBlock Margin="0 0 0 120" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="20">7.000.000 VND</TextBlock>
            <Button  Height="45" FontSize="25" DockPanel.Dock="Top" materialDesign:ButtonAssist.CornerRadius="5" VerticalAlignment="Bottom" Margin="50">
                Thanh toán
            </Button>
        </Grid>
    </Grid>
</Page>
