<Page x:Class="EasyTimeTable.Views.Student.Calendar.SchedulerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      xmlns:local="clr-namespace:EasyTimeTable.Views.Student.Calendar"
      mc:Ignorable="d" 
      xml:lang="vi-VN"
      Height="960" Width="1440"
      DataContext="{StaticResource SchedulerVM}"
      Title="SchedulerPage">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/Background.jpg"/>
    </Page.Background>
    <Grid Margin="20 20 40 160">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button HorizontalAlignment="Right" FontSize="20" Height="40" Width="100" Margin="20" Click="Thang_Click">Tháng</Button>
            <Button HorizontalAlignment="Right" FontSize="20" Height="40" Width="100"  Margin="20" Click="Tuan_Click">Tuần</Button>
        </StackPanel>
        <syncfusion:SfScheduler Grid.Row="1"
            x:Name="Schedule" 
            ItemsSource="{Binding scheduleAppointmentCollection}"
            ViewType="Month" 
            Language="vi-VN"
            AppointmentEditFlag="None"
            Background="Transparent">
            <syncfusion:SfScheduler.DaysViewSettings>
                <syncfusion:DaysViewSettings 
                    TimeIntervalSize="100"
            StartHour="7.5"
            EndHour="17"/>
            </syncfusion:SfScheduler.DaysViewSettings>
        </syncfusion:SfScheduler>
        
    </Grid>
</Page>
